shapeList = (f, depth -> 
    if depth == 0
    then Shape{
        a: Triangle{}
    }
    else Shape{
        a: Triangle{}
        b: (s = f(f, depth-1), s{
            pos.y = -1
            angle = 15
            scale = X2(0.96)
        })
    }
)

tree = Shape{
    depth = 30
    a: (s = shapeList(shapeList, depth), s{scale = X2(60)})
}
